<div class="container">
  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    <div class="mdl-cell mdl-cell--4-col"></div>
    <div class="mdl-cell mdl-cell--4-col">
      <div class="mdl-card mdl-shadow--2dp block--full">
        <div class="mdl-card__title mdl-card--border">
          <h2 class="mdl-card__title-text">Sign Up</h2>
        </div>
        <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name),
            wrapper_mappings: { boolean: :mdl_checkbox } do |f| %>
          <div class="mdl-card__supporting-text">
            <div class="mdl-grid">
              <div class="mdl-cell mdl-cell--12-col">
                <%= f.input :email %>
                <%= f.input :password %>
                <%= f.input :password_confirmation, label: 'Re-enter password' %>
                <%= f.input :remember_me, as: :boolean %>
              </div>
              <div class="mdl-cell mdl-cell--12-col text-center">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
          <div class="mdl-card__actions mdl-card--border mdl-card__actions--right">
            <%= f.submit "Sign up", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="mdl-cell mdl-cell--4-col"></div>
  </div>
</div>
