<div class="container">
  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
      <div class="mdl-card mdl-shadow--2dp block--full">
        <div class="mdl-card__title mdl-card--border">
          <h2 class="mdl-card__title-text">Records</h2>
        </div>
        <div class="mdl-card__menu">
          <%= link_to new_album_path do %>
            <i class="material-icons right">add_circle</i>
          <% end %>
        </div>
        <% if @albums.any? %>
          <table class="mdl-data-table mdl-js-data-table mdl-data-table--striped block--full">
            <thead>
              <th class="mdl-data-table__cell--non-numeric">Title</th>
              <th class="mdl-data-table__cell--non-numeric">Release Date</th>
              <th class="mdl-data-table__cell--non-numeric">Description</th>
              <th></th>
            </thead>
            <% @albums.each do |album| %>
              <tr>
                <td class="mdl-data-table__cell--non-numeric cell--text-large">
                  <%= link_to album.title, album_path(album) %>
                </td>
                <td class="mdl-data-table__cell--non-numeric">
                  <%= album.release_date.strftime("%B %e, %Y") %>
                </td>
                <td class="mdl-data-table__cell--non-numeric">
                  <%= album.description.truncate(30) %>
                </td>
                <td>
                  <%= link_to "Edit", edit_album_path(album) %>
                </td>
              </tr>
            <% end %>
          </table>
        <% else %>
          <div class="mdl-card__supporting-text">
            <p>You haven't added any records yet. <%= link_to "Add one.", new_album_path %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
