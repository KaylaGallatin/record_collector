<div class="container">
  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
      <div class="mdl-card mdl-shadow--2dp block--full">
        <div class="mdl-card__title mdl-card--border">
          <h2 class="mdl-card__title-text">New Album</h2>
        </div>
        <%= simple_form_for @album, url: albums_path(@album) do |f| %>
          <div class="mdl-card__supporting-text">
            <%= render 'form', f: f %>
          </div>
          <div class="mdl-card__actions mdl-card--border mdl-card__actions--right">
            <%= link_to "Cancel", :back, class: "mdl-button mdl-js-button mdl-button--gray" %>
            <%= f.submit "Save", class: "mdl-button mdl-js-button mdl-button--contrast" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
