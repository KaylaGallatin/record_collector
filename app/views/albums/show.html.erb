<div class="container">
  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col mdl-cell--page-title">
      <h1>
        <%= @album.title %>
        <%= link_to edit_album_path(@album) do %>
          <button type="button" class="mdl-button mdl-js-button mdl-button--contrast">
            Edit
          </button>
        <% end %>
      </h1>
    </div>
    <div class="mdl-cell mdl-cell--12-col">
      <div class="mdl-card mdl-shadow--2dp block--full">
        <div class="mdl-card__title mdl-card--border">
          <h2 class="mdl-card__title-text">Information</h2>
        </div>
        <div class="mdl-card__supporting-text">
          <p>Released: <%= @album.release_date.strftime("%B %e, %Y") %></p>
          <p><%= @album.description %></p>
        </div>
      </div>
    </div>
    <div class="mdl-cell mdl-cell--12-col">
      <%= link_to album_path(@album), method: :delete, data: { confirm: "Are you sure you want to delete this record?" } do %>
        <button type="button" class="mdl-button mdl-js-button mdl-button--warning">
          Delete this record
        </button>
      <% end %>
    </div>
  </div>
</div>
